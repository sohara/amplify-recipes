{{#if message}}
  <h3>{{message}}</h3>
{{/if}}
<Form @model={{this}} @onSubmit={{action "login"}}
  @classNames="md:w-1/2 lg:w-1/3 mx-auto" as |f|>
  <f.legend>Sign In</f.legend>
  <f.errors @errors={{this.errors}} />
  <f.input @field="username" />
  <f.input @field="password" @type="password" />
  <div class="w-full mb-6 px-3">
    <f.button @type="submit">Submit</f.button>
  </div>
</Form>
