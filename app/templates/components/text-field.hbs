<div class="w-full px-3 pb-3">
  <label class="block uppercase tracking-wide text-grey-darkest text-xs font-bold mb-2"
    for={{this.inputId}}>
    {{this.label}}
  </label>
  {{#let (get @model @field) as |value|}}
    <input class="block w-full  text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
      value={{value}}
      oninput={{action (mut value) value="target.value"}}
      id={{this.inputId}}
      type={{this.inputType}}
      placeholder={{@placeholder}}>
  {{/let}}
</div>
